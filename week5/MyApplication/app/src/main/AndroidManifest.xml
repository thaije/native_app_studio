<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.porsi.tjalling.ghostlyv2" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Startscreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartSettings"
            android:label="@string/title_activity_start_settings"
            android:parentActivityName=".Startscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.porsi.tjalling.ghostlyv2.Startscreen" />
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:parentActivityName=".Startscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.porsi.tjalling.ghostlyv2.Startscreen" />
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
    </application>

</manifest>
